<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

  <changeSet id="02.10.2025-create-countries-table" author="spuzakov">
    <createTable tableName="countries">
      <column name="id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="geoname_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="initialized" type="BOOLEAN" defaultValue="false">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createIndex indexName="idx_countries_geoname_id" tableName="countries">
      <column name="geoname_id"/>
    </createIndex>
    <createIndex indexName="idx_countries_name" tableName="countries">
      <column name="name"/>
    </createIndex>
  </changeSet>

  <changeSet id="02.10.2025-add-countries" author="spuzakov">
    <insert tableName="countries">
      <column name="id" valueComputed="uuid_generate_v4()"/>
      <column name="geoname_id" value="2017370"/>
      <column name="name" value="Россия"/>
    </insert>
    <insert tableName="countries">
      <column name="id" valueComputed="uuid_generate_v4()"/>
      <column name="geoname_id" value="630336"/>
      <column name="name" value="Беларусь"/>
    </insert>
    <insert tableName="countries">
      <column name="id" valueComputed="uuid_generate_v4()"/>
      <column name="geoname_id" value="690791"/>
      <column name="name" value="Украина"/>
    </insert>
    <insert tableName="countries">
      <column name="id" valueComputed="uuid_generate_v4()"/>
      <column name="geoname_id" value="1522867"/>
      <column name="name" value="Казахстан"/>
    </insert>
    <insert tableName="countries">
      <column name="id" valueComputed="uuid_generate_v4()"/>
      <column name="geoname_id" value="617790"/>
      <column name="name" value="Молдова"/>
    </insert>
    <insert tableName="countries">
      <column name="id" valueComputed="uuid_generate_v4()"/>
      <column name="geoname_id" value="1512440"/>
      <column name="name" value="Узбекистан"/>
    </insert>
    <insert tableName="countries">
      <column name="id" valueComputed="uuid_generate_v4()"/>
      <column name="geoname_id" value="614540"/>
      <column name="name" value="Грузия"/>
    </insert>

  </changeSet>

  <changeSet id="02.10.2025-create-regions-table" author="spuzakov">
    <createTable tableName="regions">
      <column name="id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="country_id" type="UUID">
        <constraints nullable="false" foreignKeyName="fk_regions_country"
          referencedTableName="countries"
          referencedColumnNames="id"
          deleteCascade="true"
        />
      </column>

      <column name="geoname_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>

      <column name="latitude" type="DECIMAL(9,6)">
        <constraints nullable="false"/>
      </column>

      <column name="longitude" type="DECIMAL(9,6)">
        <constraints nullable="false"/>
      </column>

      <column name="timezone" type="VARCHAR(255)">
      </column>

      <column name="initialized" type="BOOLEAN" defaultValue="false">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createIndex indexName="idx_regions_country_id"
      schemaName="business_sch"
      tableName="regions">
      <column name="country_id"/>
    </createIndex>
  </changeSet>

  <changeSet id="02.10.2025-create-cities-table" author="spuzakov">
    <createTable tableName="cities" schemaName="business_sch">
      <column name="id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="geoname_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <column name="region_id" type="UUID">
        <constraints nullable="false" foreignKeyName="fk_cities_region"
          referencedTableName="regions"
          referencedColumnNames="id"
          deleteCascade="true"
        />
      </column>

      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>

      <column name="latitude" type="DECIMAL(9,6)">
        <constraints nullable="false"/>
      </column>

      <column name="longitude" type="DECIMAL(9,6)">
        <constraints nullable="false"/>
      </column>

    </createTable>

    <createIndex indexName="idx_cities_region_id"
      schemaName="business_sch"
      tableName="cities">
      <column name="region_id"/>
    </createIndex>

    <createIndex indexName="idx_cities_name"
      schemaName="business_sch"
      tableName="cities">
      <column name="name"/>
    </createIndex>

  </changeSet>

</databaseChangeLog>