<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet id="02.10.2025-create-orders-table" author="spuzakov">
        <createTable tableName="orders" schemaName="business_sch">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_orders_user"
                  references="business_sch.users(id)"/>
            </column>

            <column name="city_full_name" type="TEXT"/>
            <column name="city_lat" type="DOUBLE PRECISION"/>
            <column name="city_lon" type="DOUBLE PRECISION"/>

            <column name="city_timezone" type="TEXT"/>

            <column name="birth_date" type="DATE"/>

            <column name="birth_time" type="TIME"/>

            <column name="status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="paid_at" type="TIMESTAMP WITH TIME ZONE"/>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE"
              defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"
              defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>